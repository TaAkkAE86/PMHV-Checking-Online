  <script>
    document.addEventListener('DOMContentLoaded', async () => {
      const vehicleLinks = {
        'BT-10': 'https://forms.office.com/r/QBiLEUvHWF',
        'TT-67': 'https://forms.office.com/r/YLjAYExKTy',
        'TT-65': 'https://forms.office.com/r/QKAnwn0hDv',
        'TT-55': 'https://forms.office.com/r/k3AkVTcFrD',
        'TT-54': 'https://forms.office.com/r/iwb0aJXVVB',
        'TT-51': 'https://forms.office.com/r/pJFAMRCnBD',
        'TT-43': 'https://forms.office.com/r/8BLw7i5fum',
        'TT-42': 'https://forms.office.com/r/zjyw9UMpSy',
        'TT-41': 'https://forms.office.com/r/ruCdTwrNxb',
        'TT-25': 'https://forms.office.com/r/dvufphA1HV',
        'TT-17': 'https://forms.office.com/r/e88itrqFcF',
        'TT-08': 'https://forms.office.com/r/bJNvQUdu6U',
        'TT-01': 'https://forms.office.com/r/1dtB8AadFS',
        'BT-13': 'https://forms.office.com/r/ci6kXkfiyR',
        'BT-05': 'https://forms.office.com/r/KifwLkzTx8',
        'BT-04': 'https://forms.office.com/r/Rw9R6Mm4B3'
        
      };

      try {
        const response = await fetch('data.json');
        if (!response.ok) throw new Error('Cannot load data.json');
        
        const pmData = await response.json();
        const pmDataMap = new Map(pmData.map(item => [item.vehicleNo, item]));

        const today = new Date();
        const todayString = today.getFullYear() + '-' + String(today.getMonth() + 1).padStart(2, '0') + '-' + String(today.getDate()).padStart(2, '0');

        document.querySelectorAll('.card-link').forEach(linkElement => {
            const vehicleId = linkElement.id.replace('link-', '');
            const cardElement = linkElement.querySelector('.vehicle-card');
            const record = pmDataMap.get(vehicleId);
            
            if (vehicleLinks[vehicleId]) {
                linkElement.href = vehicleLinks[vehicleId];
            }
            
            if (record) {
                const nextPmDate = new Date(record.nextPmDate);
                const displayDate = nextPmDate.toLocaleDateString('en-GB', { day: '2-digit', month: 'short' });
                const displayTime = record.nextPmTime;
                
                // --- NEW: Logic for date color class ---
                let dateClass = '';
                if (record.nextPmDate < todayString) {
                    dateClass = 'date-past';
                } else if (record.nextPmDate === todayString) {
                    dateClass = 'date-today';
                    linkElement.classList.add('is-today');
                } else {
                    dateClass = 'date-future';
                }
                
                cardElement.innerHTML = `
                    <div class="vehicle-no">${vehicleId}</div>
                    <div class="pm-date ${dateClass}">${displayDate}</div>
                    <div class="pm-time">${displayTime}</div>
                `;

            } else {
                cardElement.innerHTML += `<div class="no-data">-- no data --</div>`;
            }
        });

      } catch (error) {
        console.error('Error:', error);
        document.querySelectorAll('.vehicle-card').forEach(card => {
            card.innerHTML += `<div class="no-data">Error</div>`;
        });
      }
    });
  </script>
